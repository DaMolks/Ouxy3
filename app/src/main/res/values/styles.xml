<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.Ouxy3.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Ouxy3.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Ouxy3.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Ouxy3.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Ouxy3.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Ouxy3.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.Ouxy3.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorIconDrawable">@null</item>
    </style>
</resources>